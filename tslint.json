{
  "extends": [
    "tslint-config-airbnb",
    "tslint-config-prettier",
    "tslint-eslint-rules",
    "tslint-react"
  ],
  "rules": {
    "import-name": false,
    "variable-name": [
      true,
      "ban-keywords",
      "check-format",
      "allow-pascal-case"
    ],
    "jsx-no-multiline-js": false,
    "no-else-after-return": ["error", { "allowElseIf": true }],
    "jsx-no-lambda": false,
    "no-consecutive-blank-lines": true,
    "ordered-imports": [
      true,
      {
        "grouped-imports": true
      }
    ]
  }
  // "jsx-no-lambda" https://cdb.reacttraining.com/react-inline-functions-and-performance-bdff784f5578
  // "import-name" https://github.com/palantir/tslint-react/issues/120
}
