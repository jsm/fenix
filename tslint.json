{
  "extends": [
    "tslint-config-airbnb",
    "tslint-config-prettier",
    "tslint-eslint-rules",
    "tslint-react"
  ],
  "rules": {
    "import-name": false, // This rule is here for now because of https://github.com/palantir/tslint-react/issues/120
    "variable-name": [
      true,
      "ban-keywords",
      "check-format",
      "allow-pascal-case"
    ],
    "jsx-no-multiline-js": false,
    "no-else-after-return": ["error", { "allowElseIf": true }],
    "jsx-no-lambda": false
    // https://cdb.reacttraining.com/react-inline-functions-and-performance-bdff784f5578
  }
}
